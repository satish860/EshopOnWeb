{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "yarp": {
    "Routes": {
      "route1": {
        "ClusterId": "catalog",
        "Match": {
          "Path": "catalog/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern": "{**catch-all}"
          }
        ]
      },
      "route2": {
        "ClusterId": "basket",
        "Match": {
          "Path": "basket/{**catch-all}"
        },
        "transforms": [
          {
            "pathPattern": "{**catch-all}"
          }
        ]
      }
    },
    "Clusters": {
      "catalog": {
        "Destinations": {
          "destination1": {
            "Address": "http://catalog.api/api/v1/catalog"
          }
        }
      },
      "basket": {
        "Destinations": {
          "destination1": {
            "Address": "http://basket.api/api/v1/basket"
          }
        }
      }
    }
  }
}
